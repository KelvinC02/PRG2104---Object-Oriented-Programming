<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@StyleSheet.css">
   <ImageView fitHeight="768.0" fitWidth="1366.0" layoutX="1.0" pickOnBounds="true">
      <image>
         <Image url="@../image/detailsScreenBackground.jpg" />
      </image>
   </ImageView>
    <!-- Left side - Pokemon Image -->
    <ImageView fx:id="pokemonImage" fitHeight="400.0" fitWidth="400.0" layoutX="50.0" layoutY="184.0" AnchorPane.leftAnchor="150.0" />

    <!-- Right side - Pokemon Information -->
    <VBox id="pokemonInfoBox" alignment="CENTER" layoutX="500.0" layoutY="50.0" prefHeight="600.0" prefWidth="816.0" spacing="20.0">
        <Label id="pokemonInfo" text="Pokemon Information">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="pokemonName" text="Name: Pikachu">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="pokemonEA" text="Elemental Attributes: Electric">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label id="pokemonAbilities" text="Abilities:">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="pokemonAbilities1" text="1. Static">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Label fx:id="pokemonAbilities2" text="2. Lightning Rod">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Label fx:id="pokemonAbilities3" text="3. Pikachu Ability">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
    </VBox>

    <Button fx:id="resetButton" layoutX="1200.0" layoutY="700.0" onAction="#getBack" styleClass="reset-button" text="Go Back" />
</AnchorPane>
